<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GreenGoodies{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-md d-flex justify-content-between">
                <a href="{{url('app_product')}}" class="navbar-brand ms-5 ps-5"><img src="{{ asset('img/logo.png') }}" alt="Logo de GreenGoodies" width="124"></a>
                <ul class="navbar-nav me-5">
                    {% if app.user %}
                    <li class="nav-item me-2">
                        <a href="{{url('app_product')}}" class="nav-link text-dark">Nos produits</a>
                    </li>
                    <li class="nav-item me-2">
                        <a href="{{url('app_cart')}}" class="nav-link text-dark">Mon panier</a>
                    </li>
                    <li class="nav-item me-2">
                        <a href="{{url('app_account')}}" class="nav-link text-dark">Mon compte</a>
                    </li>
                    <li class="nav-item me-2">
                        <a href="{{url('app_logout')}}" class="nav-link text-dark">Déconnexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item me-2">
                        <a href="{{url('app_login')}}" class="nav-link text-dark">Connexion</a>
                    </li>
                    <li class="nav-item me-2">
                        <a href="{{url('app_register')}}" class="nav-link text-dark">Inscription</a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
        <footer class="d-flex justify-content-end bg-white">
            <p class="p-4 mb-0"> &copy; GreenGoodies - 2024</p>
        </footer>
    </body>
</html>
